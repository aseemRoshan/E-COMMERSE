        data: JSON.stringify({ orderId: orderId, productId: productId }),
        success: (response) => {
            if (response.result.modifiedCount === 1) {
                window.location.reload();
            }
        },
        error: (error) => {
            alert(error);
        }
    });
}

function shipProduct(orderId, productId) {
    $.ajax({
        url: '/admin/shipProduct',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ orderId: orderId, productId: productId }),
        success: (response) => {
            if (response.result.modifiedCount === 1) {
                window.location.reload();
            }
        },
        error: (error) => {
            alert(error);
        }
    });
}

function deliverProduct(orderId, productId) {
    $.ajax({
        url: '/admin/deliverProduct',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ orderId: orderId, productId: productId }),
        success: (response) => {
            if (response.result.modifiedCount === 1) {
                window.location.reload();
            }
        },
        error: (error) => {
            alert(error);
        }
    });
}

function returnProduct(orderId, productId) {
    $.ajax({
        url: '/admin/returnProduct',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ orderId: orderId, productId: productId }),
        success: (response) => {
            if (response.result.modifiedCount === 1) {
                window.location.reload();
            }
        },
        error: (error) => {
            alert(error);
        }
    });
}
</script>






















