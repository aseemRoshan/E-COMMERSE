<!-- Custom CSS for Product Alignment with Exact Image Size -->
<style>
    /* Ensure product items are consistent */
    .product-item {
        display: flex;
        flex-direction: column;
        height: 100%; /* Ensure all items stretch to the same height */
        text-align: center;
        position: relative;
    }

    /* Exact image size */
    .product-thumbnail {
        height: 300px; /* Exact height for uniformity */
        width: 100%; /* Width scales to container */
        object-fit: cover; /* Ensures the image scales properly without distortion */
    }

    /* Container for product details */
    .product-details {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px 0;
    }

    /* Product title styling */
    .product-title {
        margin: 10px 0;
        min-height: 50px; /* Ensures titles take up the same space */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Price styling */
    .product-price, .productsale-price {
        display: inline-block;
        margin: 0 5px;
    }

    /* Icon cross positioning */
    .icon-cross {
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>

