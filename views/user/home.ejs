<!-- Start Product Section -->
<div class="product-section">
    <div class="container">
        <div class="row">
            <!-- Start Column 1 -->
            <div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
                <h2 class="mb-4 section-title">Crafted with excellent material.</h2>
                <p class="mb-4">Crafted for comfort and style. Perfectly designed to enhance your home with elegance and quality.</p>
                <p><a href="/shop" class="btn">Explore</a></p>
            </div>
            <!-- End Column 1 -->

            <!-- Start Column 2 -->
            <% products.forEach(product => { %>
            <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
                <a class="product-item" href="/">
                    <img src="/uploads/re-image/<%= product.productImage[0] %>" style="border-radius: 30px;" class="img-fluid product-thumbnail" >
                    <div class="product-details">
                        <h3 class="product-title"><%= product.productName %></h3>
                        <div>
                            <strong style="text-decoration: line-through;" class="product-price">₹<%= product.regularPrice %></strong>
                            <strong style="color: green;" class="productsale-price">₹<%= product.salePrice %></strong>
                        </div>
                        <span class="icon-cross">
                            <img src="/furni-1.0.0/images/cross.svg" class="img-fluid">
                        </span>
                    </div>
                </a>
            </div>
            <% }) %>
            <!-- End Column 2 -->
        </div>
    </div>
</div>
<!-- End Product Section -->

