<%- include("../../views/partials/user/header", { currentPage: 'profile' }) %>

<style>
  :root {
    --primary-color: #4a6fa5;
    --primary-light: #e8f0fe;
    --secondary-color: #5d8aa8;
    --accent-color: #2e5984;
    --text-dark: #333333;
    --text-light: #ffffff;
    --text-muted: #6c757d;
    --border-color: #dee2e6;
    --success-color: #28a745;
    --danger-color: #dc3545;
    --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
    --hover-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
    --transition-speed: 0.3s;
  }

  body {
    font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    color: var(--text-dark);
  }

  .main {
    padding: 40px 0;
    background-color: #f8f9fa;
  }

  .page-header.breadcrumb-wrap {
    background-color: var(--primary-light);
    padding: 15px 0;
    margin-bottom: 30px;
    border-bottom: 1px solid var(--border-color);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    font-size: 14px;
  }

  .breadcrumb a {
    color: var(--primary-color);
    text-decoration: none;
    position: relative;
    margin: 0 8px;
    transition: color var(--transition-speed);
  }

  .breadcrumb a:hover {
    color: var(--accent-color);
  }

  .breadcrumb span {
    margin: 0 8px;
    color: var(--text-muted);
  }

  .breadcrumb a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--accent-color);
    left: 0;
    bottom: -2px;
    transform: scaleX(0);
    transition: transform var(--transition-speed);
  }

  .breadcrumb a:hover::after {
    transform: scaleX(1);
  }

  .dashboard-menu {
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: var(--card-shadow);
    position: sticky;
    top: 20px;
  }

  .dashboard-menu .nav-link {
    font-weight: 500;
    color: var(--text-dark);
    padding: 12px 15px;
    border-radius: 6px;
    margin-bottom: 8px;
    transition: all var(--transition-speed);
    display: flex;
    align-items: center;
    border-left: 3px solid transparent;
  }

  .dashboard-menu .nav-link i {
    margin-right: 10px;
    font-size: 18px;
  }

  .dashboard-menu .nav-link:hover,
  .dashboard-menu .nav-link.active {
    background-color: var(--primary-light);
    color: var(--primary-color);
    border-left: 3px solid var(--primary-color);
  }

  .dashboard-menu .nav-link.active {
    font-weight: 600;
  }

  .card {
    border-radius: 10px;
    box-shadow: var(--card-shadow);
    margin-bottom: 25px;
    border: none;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .card:hover {
    transform: translateY(-3px);
    box-shadow: var(--hover-shadow);
  }

  .card-header {
    background-color: var(--primary-color);
    color: var(--text-light);
    border-radius: 10px 10px 0 0 !important;
    padding: 15px 20px;
    font-weight: 600;
    border-bottom: none;
  }

  .card-body {
    padding: 20px;
  }

  .btn {
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: 500;
    transition: all var(--transition-speed);
  }

  .btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
  }

  .btn-primary:hover {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
  }

  .btn-success {
    background-color: var(--success-color);
    border-color: var(--success-color);
  }

  .btn-small {
    padding: 5px 12px;
    font-size: 0.85rem;
    display: inline-block;
    color: var(--primary-color);
    background-color: var(--primary-light);
    border-radius: 4px;
    text-decoration: none;
    transition: all var(--transition-speed);
  }

  .btn-small:hover {
    background-color: var(--primary-color);
    color: var(--text-light);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .table {
    border-collapse: separate;
    border-spacing: 0;
    width: 100%;
  }

  .table th {
    background-color: var(--primary-light);
    color: var(--primary-color);
    font-weight: 600;
    padding: 12px;
    border-bottom: 2px solid var(--primary-color);
  }

  .table td {
    padding: 12px;
    border-bottom: 1px solid var(--border-color);
    vertical-align: middle;
  }

  .table tr:last-child td {
    border-bottom: none;
  }

  .table tr:hover {
    background-color: var(--primary-light);
  }

  .pagination {
    margin-top: 20px;
    display: flex;
    gap: 10px;
  }

  .credit {
    color: var(--success-color);
    font-weight: 600;
  }

  .debit {
    color: var(--danger-color);
    font-weight: 600;
  }

  .profile-info h5 {
    margin-bottom: 5px;
    font-weight: 600;
  }

  .profile-info p {
    margin-bottom: 15px;
    color: var(--text-dark);
  }

  .referral-box {
    background-color: var(--primary-light);
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 15px;
  }

  .referral-code {
    font-family: monospace;
    font-size: 1.1rem;
    background-color: white;
    padding: 8px 12px;
    border-radius: 4px;
    border: 1px dashed var(--primary-color);
    display: inline-block;
    margin: 10px 0;
  }

  address {
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .dashboard-menu {
      margin-bottom: 25px;
      position: static;
    }
    
    .card {
      margin-bottom: 20px;
    }
    
    .btn {
      width: 100%;
      margin-bottom: 10px;
    }
  }
</style>

<main class="main">
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span>/</span> Profile <span>/</span> Account
      </div>
    </div>
  </div>
  <section class="pt-4 pb-4">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 m-auto">
          <div class="row">
            <div class="col-md-4">
              <div class="dashboard-menu">
                <ul class="nav flex-column" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link" id="dashboard-tab" data-bs-toggle="tab" href="#dashboard" role="tab" aria-controls="dashboard" aria-selected="false">
                      <i class="fi-rs-settings-sliders"></i>Dashboard
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="true">
                      <i class="fi-rs-marker"></i>My Address
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab" aria-controls="orders" aria-selected="false">
                      <i class="fi-rs-shopping-bag"></i>Orders
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="wallet-status-tab" data-bs-toggle="tab" href="#wallet-status" role="tab" aria-controls="wallet-status" aria-selected="false">
                      <i class="fi-rs-wallet"></i>Wallet Status
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="wallet-history-tab" data-bs-toggle="tab" href="#wallet-history" role="tab" aria-controls="wallet-history" aria-selected="false">
                      <i class="fi-rs-time-past"></i>Wallet History
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="referal-tab" data-bs-toggle="tab" href="#referal" role="tab" aria-controls="referal" aria-selected="false">
                      <i class="fi-rs-share"></i>Referrals
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/logout">
                      <i class="fi-rs-sign-out"></i>Logout
                    </a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-md-8">
              <div class="tab-content dashboard-content">
                <div class="tab-pane fade" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                  <div class="card">
                    <div class="card-header">
                      <h5 class="mb-0">User Profile</h5>
                    </div>
                    <div class="card-body">
                      <div class="profile-info text-center">
                        <div class="mb-4">
                          <div class="avatar-placeholder bg-primary-light rounded-circle mx-auto d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; background-color: var(--primary-light);">
                            <span style="font-size: 28px; color: var(--primary-color);"><%= user.name.charAt(0).toUpperCase() %></span>
                          </div>
                        </div>
                        <h5 class="card-title"><%= user.name %></h5>
                        <p class="card-text">
                          <i class="fi-rs-smartphone me-2" style="opacity: 0.7;"></i><%= user.phone %>
                        </p>
                        <p class="card-text">
                          <i class="fi-rs-envelope me-2" style="opacity: 0.7;"></i><%= user.email %>
                        </p>
                        <div class="mt-4">
                          <a href="/change-email" class="btn btn-sm btn-primary mx-1">Change Email</a>
                          <a href="/change-password" class="btn btn-sm btn-primary mx-1">Change Password</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                  <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">My Addresses</h5>
                      <a href="/addAddress" class="btn btn-sm btn-primary">Add New Address</a>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <% if (userAddress && userAddress.address && userAddress.address.length > 0) { %>
                          <% userAddress.address.forEach((address) => { %>
                            <div class="col-md-6 mb-3">
                              <div class="card h-100">
                                <div class="card-header bg-transparent border-bottom">
                                  <h6 class="mb-0 text-primary"><%= address.addressType %></h6>
                                </div>
                                <div class="card-body">
                                  <address>
                                    <strong><%= address.name %></strong><br/>
                                    <%= address.landMark %><br/>
                                    <%= address.city %>, <%= address.state %><br/>
                                    PIN: <%= address.pincode %>
                                  </address>
                                  <p class="mb-1"><i class="fi-rs-smartphone me-2" style="opacity: 0.7;"></i><%= address.phone %></p>
                                  <% if (address.altPhone) { %>
                                    <p><i class="fi-rs-smartphone me-2" style="opacity: 0.7;"></i><%= address.altPhone %></p>
                                  <% } %>
                                  <div class="d-flex justify-content-between mt-3">
                                    <a href="/editAddress?id=<%=address._id%>" class="btn-small">Edit</a>
                                    <a href="/deleteAddress?id=<%=address._id%>" class="btn-small text-danger">Delete</a>
                                  </div>
                                </div>
                              </div>
                            </div>
                          <% }) %>
                        <% } else { %>
                          <div class="col-12 text-center py-4">
                            <p class="text-muted mb-3">You haven't added any addresses yet.</p>
                            <a href="/addAddress" class="btn btn-primary">
                              <i class="fi-rs-plus me-2"></i>Add Your First Address
                            </a>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                  <div class="card">
                    <div class="card-header">
                      <h5 class="mb-0">Your Orders</h5>
                    </div>
                    <div class="card-body">
                      <% if (orders && orders.length > 0) { %>
                        <div class="table-responsive">
                          <table class="table">
                            <thead>
                              <tr>
                                <th>Order ID</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Actions</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% orders.forEach((order) => { %>
                                <tr>
                                  <td><span style="font-family: monospace;"><%= order._id.toString().slice(-8) %></span></td>
                                  <td>
                                    <span class="badge <%= order.status === 'Delivered' ? 'bg-success' : order.status === 'Cancelled' ? 'bg-danger' : 'bg-primary' %>" style="padding: 5px 10px; border-radius: 20px;">
                                      <%= order.status %>
                                    </span>
                                  </td>
                                  <td>₹<%= order.totalPrice.toLocaleString() %></td>
                                  <td>
                                    <a href="/orderDetails?id=<%= order._id %>" class="btn-small">
                                      <i class="fi-rs-eye me-1"></i>View
                                    </a>
                                  </td>
                                </tr>
                              <% }) %>
                            </tbody>
                          </table>
                        </div>
                        <div class="pagination">
                          <% if (currentOrdersPage > 1) { %>
                            <a href="?ordersPage=<%= currentOrdersPage - 1 %>&limit=5#orders" class="btn btn-sm btn-outline-primary">
                              <i class="fi-rs-angle-left me-1"></i>Previous
                            </a>
                          <% } %>
                          <% if (currentOrdersPage < totalOrdersPages) { %>
                            <a href="?ordersPage=<%= currentOrdersPage + 1 %>&limit=5#orders" class="btn btn-sm btn-outline-primary">
                              Next<i class="fi-rs-angle-right ms-1"></i>
                            </a>
                          <% } %>
                        </div>
                      <% } else { %>
                        <div class="text-center py-4">
                          <div style="font-size: 3rem; color: var(--text-muted); opacity: 0.3;">
                            <i class="fi-rs-shopping-bag"></i>
                          </div>
                          <p class="text-muted mt-3 mb-4">You haven't placed any orders yet.</p>
                          <a href="/" class="btn btn-primary">Start Shopping</a>
                        </div>
                      <% } %>
                    </div>
                  </div>
                </div>

                <div class="tab-pane fade" id="wallet-status" role="tabpanel" aria-labelledby="wallet-status-tab">
                  <div class="card">
                    <div class="card-header">
                      <h5 class="mb-0">Wallet</h5>
                    </div>
                    <div class="card-body">
                      <div class="text-center py-4">
                        <div style="font-size: 2.5rem; color: var(--primary-color);">
                          <i class="fi-rs-wallet mb-3"></i>
                        </div>
                        <h2 class="mb-4">₹<%= user.wallet.toLocaleString() %></h2>
                        <p class="text-muted mb-4">Your current wallet balance</p>
                        <!-- <button type="button" class="btn btn-primary" onclick="">
                          <i class="fi-rs-plus me-1"></i>Add Money
                        </button> -->
                      </div>
                    </div>
                  </div>
                </div>

                <div class="tab-pane fade" id="wallet-history" role="tabpanel" aria-labelledby="wallet-history-tab">
                  <div class="card">
                    <div class="card-header">
                      <h5 class="mb-0">Wallet History</h5>
                    </div>
                    <div class="card-body">
                      <% if (walletHistory && walletHistory.length > 0) { %>
                        <div class="table-responsive">
                          <table class="table">
                            <thead>
                              <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Description</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% walletHistory.forEach((transaction) => { %>
                                <tr>
                                  <td><%= new Date(transaction.date).toLocaleDateString() %><br>
                                    <small class="text-muted"><%= new Date(transaction.date).toLocaleTimeString() %></small>
                                  </td>
                                  <td>
                                    <span class="badge <%= transaction.status === 'credit' ? 'bg-success' : 'bg-danger' %>" style="padding: 5px 10px; border-radius: 20px;">
                                      <%= transaction.status.charAt(0).toUpperCase() + transaction.status.slice(1) %>
                                    </span>
                                  </td>
                                  <td class="<%= transaction.status === 'credit' ? 'credit' : 'debit' %>">
                                    <%= transaction.status === 'credit' ? '+' : '-' %> ₹<%= transaction.amount.toLocaleString() %>
                                  </td>
                                  <td><%= transaction.description %></td>
                                </tr>
                              <% }) %>
                            </tbody>
                          </table>
                        </div>
                        <div class="pagination">
                          <% if (currentWalletHistoryPage > 1) { %>
                            <a href="?walletHistoryPage=<%= currentWalletHistoryPage - 1 %>&limit=5#wallet-history" class="btn btn-sm btn-outline-primary">
                              <i class="fi-rs-angle-left me-1"></i>Previous
                            </a>
                          <% } %>
                          <% if (currentWalletHistoryPage < totalWalletHistoryPages) { %>
                            <a href="?walletHistoryPage=<%= currentWalletHistoryPage + 1 %>&limit=5#wallet-history" class="btn btn-sm btn-outline-primary">
                              Next<i class="fi-rs-angle-right ms-1"></i>
                            </a>
                          <% } %>
                        </div>
                      <% } else { %>
                        <div class="text-center py-4">
                          <div style="font-size: 3rem; color: var(--text-muted); opacity: 0.3;">
                            <i class="fi-rs-time-past"></i>
                          </div>
                          <p class="text-muted mt-3">No transactions found in your wallet history.</p>
                        </div>
                      <% } %>
                    </div>
                  </div>
                </div>

                <div class="tab-pane fade" id="referal" role="tabpanel" aria-labelledby="referal-tab">
                  <div class="card">
                    <div class="card-header">
                      <h5 class="mb-0">Referrals</h5>
                    </div>
                    <div class="card-body">
                      <div class="referral-box">
                        <h6 class="mb-3">Refer your friends and earn money!</h6>
                        <p>Share this referral code with your friends:</p>
                        <div class="referral-code"><%= user.referalCode %></div>
                        <button class="btn btn-sm btn-outline-primary copy-btn" onclick="copyToClipboard('<%= user.referalCode %>')">
                          <i class="fi-rs-copy me-1"></i>Copy Code
                        </button>
                      </div>
                      
                      <div class="text-center my-4">
                        <h5>Total Earnings: <span class="text-success">₹<%= user.referralEarnings.toLocaleString() %></span></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
