<script>
  // Filter and search functions
function performSearch() {
    const query = document.getElementById('product-search').value;
    fetch(`/search?query=${encodeURIComponent(query)}`, {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json',
        },
    })
    .then(response => response.json())
    .then(data => {
        updateProductContainer(data);
    })
    .catch(error => {
        console.error('Error:', error);
    });
}

function updateProductContainer(data) {
    const productContainer = document.getElementById('productContainer');
    productContainer.innerHTML = '';
    data.forEach(product => {
        const productHTML = `
            <div class="product-item">
                <button class="wishlist-btn" onclick="addToWishlist('${product._id}')">
                    <i class="fas fa-heart"></i>
                </button>
                <a href="/product-details?id=${product._id}">
                    <img src="/uploads/re-image/${product.productImage[0]}" class="img-fluid product-thumbnail">
                    <h3 class="product-title">${product.productName}</h3>
                    <p>Brand: ${product.brand}</p>
                    <strong class="product-price" style="text-decoration: line-through;">₹${product.regularPrice}</strong>
                    <strong class="productsale-price">₹${product.salePrice}</strong>
                </a>
                <button class="add-to-cart-btn" onclick="addToCart('${product._id}')">Add to Cart</button>
            </div>
        `;
        productContainer.innerHTML += productHTML;
    });
}

  // Wishlist functionality
  function initWishlistButtons() {
    document.querySelectorAll('.wishlist-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        this.classList.toggle('active');
        // Add your wishlist API call here
      });
    });
  }

  // Initialize wishlist buttons on page load
  initWishlistButtons();

  // Add to Cart functionality
  function addToCart(productId) {
    $.ajax({
      url: '/addToCart',
      method: 'POST',
      data: { productId: productId },
      success: (response) => {
        Swal.fire({
          title: 'Success',
          text: response.message,
          icon: 'success',
          timer: 3000 // Increase the timer duration
        });
      },
      error: (error) => {
        if (error.responseJSON && error.responseJSON.message) {
          Swal.fire({
            title: 'Error',
            text: error.responseJSON.message,
            icon: 'error',
            timer: 3000 // Increase the timer duration
          });
        } else {
          Swal.fire({
            title: 'Error',
            text: 'There was an error adding the product to your cart',
            icon: 'error',
            timer: 3000 // Increase the timer duration
          });
        }
      }
    });
  }
</script>
